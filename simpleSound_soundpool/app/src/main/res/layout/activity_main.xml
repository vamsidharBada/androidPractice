<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    tools:context="elnino.androidmedia.MainActivity">

    <Button
        style="@style/KeyStyle"
        android:id="@+id/key1"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="playKey1"/>

    <Button
        style="@style/KeyStyle"
        android:id="@+id/key2"
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="playKey2"/>/>

    <Button
        style="@style/KeyStyle"
        android:id="@+id/key3"
        android:background="@color/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="playKey3"/>/>

    <Button
        style="@style/KeyStyle"
        android:id="@+id/key4"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="playKey4"/>/>

    <Button
        style="@style/KeyStyle"
        android:id="@+id/key5"
        android:background="@color/turquoise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="playKey5"/>/>


    <Button
        style="@style/KeyStyle"
        android:id="@+id/key6"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="playKey6"/>/>

    <Button
        style="@style/KeyStyle"
        android:id="@+id/key7"
        android:background="@color/purple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="playKey7"/>/>

</LinearLayout>
